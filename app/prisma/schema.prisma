generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Auth & Identity
// ============================================================================

model User {
  id            String    @id @default(cuid())
  username      String?   @unique
  displayName   String?
  email         String?   @unique
  emailVerified DateTime?
  bio           String?
  avatarUrl     String?
  isPublic      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Social links
  twitterHandle  String?
  githubHandle   String?
  discordHandle  String?
  websiteUrl     String?

  // Preferences
  preferredLocale String @default("en")
  theme           String @default("dark")

  // Linked wallet for on-chain credentials
  walletAddress String? @unique

  // Relations
  accounts       Account[]
  sessions       Session[]
  wallets        UserWallet[]
  courseProgress  CourseProgress[]
  xpEvents       XPEvent[]
  achievements   UserAchievement[]
  streakData     StreakRecord?
  nonces         WalletNonce[]

  // Phase 5.2 progress service relations
  enrollments       Enrollment[]
  lessonCompletions LessonCompletion[]
  userXP            UserXP?
  userStreak        UserStreak?
  userAchievements  UserAchievementNew[]
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// Wallet Linking
// ============================================================================

model UserWallet {
  id        String   @id @default(cuid())
  userId    String
  address   String   @unique
  isPrimary Boolean  @default(false)
  linkedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model WalletNonce {
  id        String   @id @default(cuid())
  userId    String?
  address   String
  nonce     String
  expiresAt DateTime
  used      Boolean  @default(false)

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([address])
}

// ============================================================================
// Learning Progress
// ============================================================================

model CourseProgress {
  id                 String   @id @default(cuid())
  userId             String
  courseId            String
  completedLessons   Int[]    @default([])
  totalLessons       Int      @default(0)
  currentModuleIndex Int      @default(0)
  currentLessonIndex Int      @default(0)
  startedAt          DateTime @default(now())
  lastAccessedAt     DateTime @default(now())
  completedAt        DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
}

// ============================================================================
// XP & Gamification
// ============================================================================

model XPEvent {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  reason    String
  courseId   String?
  lessonId   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model StreakRecord {
  id               String   @id @default(cuid())
  userId           String   @unique
  currentStreak    Int      @default(0)
  longestStreak    Int      @default(0)
  lastActivityDate DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId Int
  unlockedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

// ============================================================================
// Leaderboard Cache
// ============================================================================

model LeaderboardCache {
  id        String   @id @default(cuid())
  timeframe String
  data      Json
  cachedAt  DateTime @default(now())
  expiresAt DateTime

  @@unique([timeframe])
}

// ============================================================================
// Phase 5.2: Learning Progress Service
// ============================================================================

model Enrollment {
  id          String    @id @default(cuid())
  userId      String
  courseSlug  String
  enrolledAt  DateTime  @default(now())
  completedAt DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseSlug])
  @@index([userId])
  @@index([courseSlug])
}

model LessonCompletion {
  id          String   @id @default(cuid())
  userId      String
  courseSlug  String
  lessonId    String
  xpAwarded   Int
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseSlug, lessonId])
  @@index([userId])
  @@index([courseSlug])
}

model UserXP {
  id               String   @id @default(cuid())
  userId           String   @unique
  totalXP          Int      @default(0)
  weeklyXP         Int      @default(0)
  monthlyXP        Int      @default(0)
  lastWeeklyReset  DateTime @default(now())
  lastMonthlyReset DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserStreak {
  id               String   @id @default(cuid())
  userId           String   @unique
  currentStreak    Int      @default(0)
  longestStreak    Int      @default(0)
  lastActivityDate DateTime?
  streakHistory    Json     @default("[]")
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserAchievementNew {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}
